@model Asp_net_Lab_1.Models.User
@using Asp_net_Lab_1.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Texts> Localizer

<h2>@Localizer["Видалення салону"]</h2>

<p>@Localizer["Ви впевнені, що хочете видалити цей салон?"]</p>

<div>
    <h4>@Localizer["Інформація про салон:"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Localizer["Повне назва:"]</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
    </dl>

    <form asp-action="DeleteUser" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value=@Localizer["Підтвердити видалення"] class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">@Localizer["Скасувати"]</a>
        </div>
    </form>
</div>
